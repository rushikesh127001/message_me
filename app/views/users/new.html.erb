


<%= form_for @user, url: {action: "create"}, html: {class: "ui form"} do |f| %>



    <div class="field">



      <%= f.label :username, "Username"%>

      <div class="ui left icon input">


        <%= f.text_field :username, placeholder:"Enter Username"%>
        



        <i class="user icon"></i>



      </div>



    </div>



    <div class="field">



      <%= f.label :Password, "Password"%>



      <div class="ui left icon input">



        <%= f.password_field :password, placeholder: "enter Password"%>



        <i class="lock icon"></i>



      </div>



    </div>



    <%= f.button "signup",class: "ui orange submit button"%>



   <%end%>

   <%= @user.errors.full_messages %>